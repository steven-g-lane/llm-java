<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for general logging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Error log file appender - separate file for tests -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.FileAppender">
        <file>target/test-logs/error.log</file>
        <prudent>true</prudent>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%ex{full}</pattern>
        </encoder>
    </appender>

    <!-- API log file appender - separate file for tests -->
    <appender name="API_FILE" class="ch.qos.logback.core.FileAppender">
        <file>target/test-logs/api.log</file>
        <prudent>true</prudent>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- API logger - additivity false prevents duplicate logging -->
    <logger name="com.pergamon.llm.api" level="INFO" additivity="false">
        <appender-ref ref="API_FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="ERROR_FILE" />
    </root>
</configuration>
